FROM python:3.12

LABEL maintainer="saqibmurtazakhan@gmail.com"

WORKDIR /app

RUN apt-get update && apt-get install -y \
build-essential \
libpq-dev \
protobuf-compiler \
&& rm -rf /var/lib/apt/lists/*

RUN pip install poetry

COPY pyproject.toml poetry.lock /app/
COPY /users_service/.env /app/.env

RUN poetry config virtualenvs.create false

RUN poetry install

COPY users_service /app/users_service

EXPOSE 8009

CMD [ "poetry", "run", "uvicorn", "users_service.main:app", "--host", "0.0.0.0", "--port", "8009", "--reload" ]

